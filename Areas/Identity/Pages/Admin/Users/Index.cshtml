@page
@model MovieTheater.Areas.Identity.Pages.Admin.Users.IndexModel

@{
    ViewData["Title"] = "Admin";
}

<h1>Người dùng</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyUser[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyUser[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyUser[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MyUser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Chi tiết</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.MyUser.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.MyUser.HasNextPage ? "disabled" : "";
}
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.MyUser.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Trước
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.MyUser.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
    Sau
</a>
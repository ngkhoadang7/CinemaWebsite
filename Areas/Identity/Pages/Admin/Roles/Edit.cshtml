@page
@model MovieTheater.Areas.Identity.Pages.Admin.Roles.EditModel

@{
    ViewData["Title"] = "Admin";
}

<h1>Chỉnh sửa</h1>
<hr>

<form method="post">
    <div class="form-group row">
        <label asp-for="model.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="model.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="model.RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="model.RoleName" class="form-control">
            <span asp-validation-for="model.RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-danger">Hủy</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Người dùng trong quyền này</h3>
        </div>
        <div class="card-body">
            @if ( Model.model.Users.Any() )
            {
                @foreach (var user in Model.model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Hiện chưa có người dùng nào</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-page="./EditUsersInRole" asp-route-roleId="@Model.model.Id" class="btn btn-primary" >Thêm xóa người dùng trong quyền</a>
        </div>
    </div>
</form>

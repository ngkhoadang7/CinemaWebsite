@page
@model MovieTheater.Pages.Theaters.CreateModel

@{
    ViewData["Title"] = "Admin";
}

<h1>Tạo mới</h1>

<h4>Phòng chiếu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Theater.Name" class="control-label"></label>
                <input asp-for="Theater.Name" class="form-control" />
                <span asp-validation-for="Theater.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theater.NoSeat" class="control-label"></label>
                <input asp-for="Theater.NoSeat" class="form-control" />
                <span asp-validation-for="Theater.NoSeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theater.Format" class="control-label"></label>
                <input asp-for="Theater.Format" class="form-control" />
                <span asp-validation-for="Theater.Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Quay lại danh sách phòng chiếu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

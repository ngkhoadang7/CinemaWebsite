@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div class="row">
    <div id="panel-pic" class="carousel slide col-md-12" data-ride="carousel">
        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#panel-pic" data-slide-to="0" class="active"></li>
            <li data-target="#panel-pic" data-slide-to="1"></li>
            <li data-target="#panel-pic" data-slide-to="2"></li>
            <li data-target="#panel-pic" data-slide-to="3"></li>
            <li data-target="#panel-pic" data-slide-to="4"></li>
        </ul>
            <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="Picture/carousel1.jpg" width="100%" height="600px"/>
            </div>
            <div class="carousel-item">
                <img src="Picture/carousel2.jpg" width="100%" height="600px" />
            </div>
            <div class="carousel-item">
                <img src="Picture/carousel3.jpg" width="100%" height="600px" />
            </div>
            <div class="carousel-item">
                <img src="Picture/carousel4.jpg" width="100%" height="600px" />
            </div>
            <div class="carousel-item">
                <img src="Picture/carousel5.jpg" width="100%" height="600px" />
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#panel-pic" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#panel-pic" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>
@using Microsoft.AspNetCore.Identity
@using MovieTheater.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Movies/Manage">Phim</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Showtimes/Manage">Lịch chiếu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Theaters/Index">Phòng chiếu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Tickets/Manage">Vé</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Admin/Statistics/Index">Thống kê</a>
    </li>
    <li class="dropdown nav-item">
        <div class="dropdown-toggle nav-link text-dark" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Quản lý người dùng
        </div>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="text-dark dropdown-item" asp-area="Identity" asp-page="/Admin/Roles/Index">Phân quyền</a>
            <a class="text-dark dropdown-item" asp-area="Identity" asp-page="/Admin/Users/Index">Người dùng</a>
        </div>
    </li>
}
else @if (SignInManager.IsSignedIn(User) && User.IsInRole("Staff"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Staff/Movies">Bán vé</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Staff/ListOfTickets">Xuất vé</a>
    </li>
}
else @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Movies/Index">Phim</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Tickets/Index">Vé đã đặt</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Movies/Index">Phim</a>
    </li>
}
</ul>
